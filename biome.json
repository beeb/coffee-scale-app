{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true
	},
	"files": {
		"ignore": [
			".devenv",
			".direnv",
			".vercel/*",
			".svelte-kit/*",
			"firmware",
			"node_modules/*",
			"build/*",
			".env",
			".env.*",
			"pnpm-lock.yaml",
			"src/app.d.ts"
		]
	}
}
